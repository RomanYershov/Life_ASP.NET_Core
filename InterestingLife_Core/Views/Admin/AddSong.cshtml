@model InterestingLife_Core.Models.Song.AddSongViewModel


@{
    ViewData["Title"] = "AddSong";
}

<h2>AddSong</h2>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
      
                <form asp-action="CreateSong">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Lyrics" class="control-label"></label>
                        <textarea asp-for="Lyrics" class="form-control"> </textarea>
                        <span asp-validation-for="Lyrics" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Categories" class="control-label"></label>
                        <select>
                            @foreach (var category in Model.Categories)
                            {

                                <option>@category.Name</option>
                            }
                        </select >
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>

                </form>
</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

